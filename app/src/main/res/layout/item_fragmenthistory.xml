<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-2-27 11：30"
                android:textSize="13.5sp"
                android:textColor="#9B9C9E"
                android:drawableLeft="@drawable/icon_time1"
                android:drawablePadding="8dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_trouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障原因：锁不上报；左刹把损坏;"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="#1E1E1E"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修方式：充电或连接摩拜系统上报信息，如不上报，需更换锁。 更换左刹把"
                android:textSize="13.5sp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="#1E1E1E"/>
            <TextView
                android:id="@+id/tv_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消耗配件：锁，左刹把"
                android:textSize="13.5sp"
                android:layout_marginTop="10dp"
                android:textColor="#1E1E1E"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广州市天河区岗顶天娱广场"
                    android:drawableLeft="@drawable/icon_position"
                    android:drawablePadding="10dp"
                    android:textColor="#787E86"
                    android:textSize="13.5sp"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="李某某"
                    android:drawableLeft="@drawable/icon_people"
                    android:drawablePadding="10dp"
                    android:textColor="#787E86"
                    android:layout_marginLeft="20dp"
                    android:textSize="13.5sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#f2f4f7"/>
</LinearLayout>