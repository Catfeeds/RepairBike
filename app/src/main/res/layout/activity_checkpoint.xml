<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#262930"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back"
                android:padding="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="故障检测"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end">
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="23dp"
                    android:paddingTop="13.5dp"
                    android:paddingBottom="13.5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单车号："
                        android:textColor="#424242"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tv_bikeId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="068872"
                        android:textColor="#303030"
                        android:textSize="16sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="23dp"
                    android:paddingTop="13.5dp"
                    android:paddingBottom="13.5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="锁    号："
                        android:textColor="#424242"
                        android:textSize="17sp"/>
                    <EditText
                        android:id="@+id/et_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#303030"
                        android:textSize="17sp"
                        android:background="@null"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="23dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修点："
                            android:layout_marginTop="5dp"
                            android:textColor="#424242"
                            android:textSize="17sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/btn_scene"
                                    android:layout_width="wrap_content"
                                    android:layout_height="34dp"
                                    android:text="现场维修"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="#FFFFFF"
                                    android:paddingLeft="14dp"
                                    android:paddingRight="14dp"
                                    android:background="@drawable/bg_5radiu_blue"
                                    android:layout_marginRight="41dp"/>
                                <RelativeLayout
                                    android:layout_width="130dp"
                                    android:layout_height="34dp"
                                    android:background="@drawable/bg_3radiu_gray">
                                    <Button
                                        android:id="@+id/btn_factory"
                                        android:layout_width="130dp"
                                        android:layout_height="34dp"
                                        android:text="返厂维修"
                                        android:textSize="12sp"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/bg_3radiu_gray"
                                        android:gravity="left|center_vertical"
                                        android:paddingLeft="10dp">
                                    </Button>
                                    <ImageView
                                        android:id="@+id/iv1"
                                        android:layout_width="23dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/icon_spinner_arrow"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="130dp"
                                android:layout_height="34dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/bg_3radiu_gray">
                                <Button
                                    android:id="@+id/btn_warehouse"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="10dp"
                                    android:text="送仓维修"
                                    android:textSize="12sp"
                                    android:gravity="left|center_vertical"
                                    android:background="@drawable/bg_3radiu_gray">
                                </Button>
                                <ImageView
                                    android:id="@+id/iv2"
                                    android:layout_width="23dp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/icon_spinner_arrow"/>
                            </RelativeLayout>
                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divide_line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障原因："
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="11dp"
                    android:textColor="#424242"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/tv_software"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="锁故障"
                        android:textSize="16sp"
                        android:textColor="#FEFDFB"
                        android:background="@drawable/bg_16radiu_blue"
                        android:paddingLeft="8dp"
                        android:drawableRight="@drawable/icon_up"
                        android:drawablePadding="5dp"
                        android:paddingRight="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                    <TextView
                        android:id="@+id/tv_hardware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="硬件故障"
                        android:textSize="16sp"
                        android:textColor="#ABABAA"
                        android:background="@drawable/bg_16stroke_blue"
                        android:drawableRight="@drawable/icon_down"
                        android:drawablePadding="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="17dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/divide_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.lida.repairbike.widget.InnerGridView
                        android:id="@+id/gv_reason_software"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="@null"
                        android:verticalSpacing="0.5dp"
                        android:horizontalSpacing="0.5dp"
                        android:numColumns="3">
                    </com.lida.repairbike.widget.InnerGridView>
                    <com.lida.repairbike.widget.InnerGridView
                        android:id="@+id/gv_reason_hardware"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="@null"
                        android:verticalSpacing="0.5dp"
                        android:horizontalSpacing="0.5dp"
                        android:visibility="gone"
                        android:numColumns="3">
                    </com.lida.repairbike.widget.InnerGridView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/divide_line"
                    android:layout_marginBottom="40dp"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btn_complate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_btn_submit"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="17sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>