<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="9dp"
    android:paddingBottom="9dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-2-27 11：30"
            android:drawableLeft="@drawable/icon_time1"
            android:drawablePadding="5dp"
            android:textColor="#9B9C9E"
            android:textSize="13.5sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="单车号：0796886"
                android:paddingTop="10dp"
                android:textColor="#1E1E1E"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_lockid"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="锁号：0796886"
                android:paddingTop="14dp"
                android:textColor="#41AB05"
                android:textSize="16sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_trouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障原因：锁不上报；左刹把损坏;"
            android:paddingTop="10dp"
            android:textColor="#1E1E1E"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消耗配件：锁，左刹把"
            android:paddingTop="10dp"
            android:textColor="#1E1E1E"
            android:visibility="gone"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州市天河区岗顶天娱广场"
                android:drawableLeft="@drawable/icon_position"
                android:drawablePadding="10dp"
                android:textColor="#787E86"
                android:textSize="13.5sp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="李某某"
                android:drawableLeft="@drawable/icon_people"
                android:drawablePadding="10dp"
                android:textColor="#787E86"
                android:layout_marginLeft="20dp"
                android:textSize="13.5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="84dp">
            <Button
                android:layout_width="143dp"
                android:layout_height="39dp"
                android:background="@drawable/bg_24radiu_red"
                android:textColor="@color/white"
                android:text="完成"
                android:textSize="17sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>