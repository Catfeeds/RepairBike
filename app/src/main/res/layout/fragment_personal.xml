<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f7">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/bg_personal">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_50radiu_white">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:riv_corner_radius="40dp"
                android:src="@drawable/icon_head"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/rl_head"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="8dp"
            android:background="@drawable/ripple_bg"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_goodbike"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修好的车子"
                    android:textColor="#7a7a7a"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="#FB9301"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
        <!--<View-->
        <!--android:layout_width="0.5dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#EFEFEF"/>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:visibility="gone"
            android:paddingBottom="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_badbike"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障车辆"
                    android:textColor="#7a7a7a"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="#7a7a7a"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="6dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="#3B3B3B"
        android:textSize="15sp"
        android:drawableLeft="@drawable/icon_record"
        android:background="@drawable/ripple_bg"
        android:text="维修历史记录"
        android:gravity="center_vertical"
        android:drawablePadding="9dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/tv_part_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="#3B3B3B"
        android:textSize="15sp"
        android:drawableLeft="@drawable/icon_consume"
        android:background="@drawable/ripple_bg"
        android:text="配件管理"
        android:gravity="center_vertical"
        android:drawablePadding="9dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>

    <TextView
        android:id="@+id/tv_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg"
        android:drawableLeft="@drawable/icon_data"
        android:drawablePadding="9dp"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="24dp"
        android:paddingTop="15dp"
        android:text="故障维修"
        android:textColor="#3B3B3B"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>

    <TextView
        android:id="@+id/tv_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg"
        android:drawableLeft="@drawable/icon_tool"
        android:drawablePadding="9dp"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="24dp"
        android:paddingTop="15dp"
        android:text="工具配置"
        android:textColor="#3B3B3B"
        android:textSize="15sp" />
</LinearLayout>