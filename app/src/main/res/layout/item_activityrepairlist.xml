<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bikeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="017683"
                android:textSize="16sp"
                android:textColor="#3E3E3E"
                android:drawableLeft="@drawable/icon_item_repair"
                android:drawablePadding="8dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="锁号:"
                    android:textSize="14sp"
                    android:textColor="#334B53"/>
                <TextView
                    android:id="@+id/tv_bikePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="994986"
                    android:textSize="16sp"
                    android:textColor="#334B53"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障原因：锁不上报；左刹把损坏;"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:textColor="#1E1E1E"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tvStatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待您的维修"
            android:textSize="14sp"
            android:textColor="#FC5D0F"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州市天河区岗顶百脑汇广场"
            android:textSize="12sp"
            android:textColor="#8E8B8B"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawableLeft="@drawable/icon_position"
            android:drawablePadding="8dp"
            android:gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李某某"
            android:drawableLeft="@drawable/icon_people"
            android:drawablePadding="10dp"
            android:textColor="#787E86"
            android:textSize="12sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"
        android:paddingBottom="10dp"/>
</LinearLayout>